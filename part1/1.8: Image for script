###file script.sh
#!/bin/sh
echo "Input website:"; read website; echo "Searching.."; sleep 1; curl http://$website;

###file dockerfile
FROM ubuntu:18.04
RUN apt-get update && apt-get install curl -y
WORKDIR /app
copy script.sh .
CMD ./script.sh


###Commands
docker build -t curler

